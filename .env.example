# ========================================
# Utro Bot - Environment Variables
# ========================================
# Copy this file to .env and fill in your values
# chmod 600 .env (on Linux for security)
# ========================================

# ----------------------------------------
# Telegram Bot Configuration
# ----------------------------------------
# Get from @BotFather on Telegram
BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# ----------------------------------------
# OpenAI API Key
# ----------------------------------------
# Get from https://platform.openai.com/api-keys
# Used for GPT-4o mini (text) and DALL-E 3 (images)
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ----------------------------------------
# Together AI API Key (for Flux image generation)
# ----------------------------------------
# Get from https://api.together.xyz/
# Optional - only needed if using Flux model instead of DALL-E
# Free tier available with limited credits
FLUX_API_KEY=your_together_ai_api_key_here

# ----------------------------------------
# Calendarific API Key (Holidays API)
# ----------------------------------------
# Get FREE key from https://calendarific.com/
# Free tier: 1000 requests/month (plenty for daily use)
# If not set, bot will use AI-generated fallback content
HOLIDAYS_API_KEY=your_calendarific_api_key_here

# ----------------------------------------
# Telegram Channel ID
# ----------------------------------------
# Get from @getidsbot or @userinfobot
# Format: -100XXXXXXXXX (for supergroups/channels)
# Bot must be admin in this channel
CHANNEL_ID=-1001234567890

# ----------------------------------------
# Admin User IDs
# ----------------------------------------
# Comma-separated list of Telegram user IDs
# Get your ID from @userinfobot
# Admins can use: /post_now, /status, /test_holidays
ADMIN_USER_IDS=123456789,987654321

# ----------------------------------------
# Timezone Configuration
# ----------------------------------------
# Timezone for post scheduling
# Default: Europe/Moscow (UTC+3)
# See: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
TIMEZONE=Europe/Moscow

# ----------------------------------------
# Morning Post Time
# ----------------------------------------
# Time for daily post in HH:MM format (24-hour)
# Default: 08:00 (8 AM in configured timezone)
MORNING_POST_TIME=08:00

# ----------------------------------------
# Debug Mode
# ----------------------------------------
# If true, sensitive data (API keys, user IDs) won't be masked in logs
# Set to false in production!
DEBUG_MODE=false
